---
export interface Props {
    title: string;
    body: string;
    href: string;
    date: string;
    type: string;
    tags: string;
}

const { href, title, body, date, type, tags } = Astro.props;
---

<article class="border-b border-gray-300 last:border-0 py-4">
    <a href={href} class="group">
        <h2 class="group-hover:underline font-bold text-lg dark:text-slate-200">
            {title}
        </h2>
        {
            tags.length > 0 && (
                <ul class="flex text-xs text-gray-500 dark:text-slate-400 space-x-2">
                    {tags.split(',').map((tag) => (
                        <li>#{tag}</li>
                    ))}
                </ul>
            )
        }

        <p class="text-gray-600 text-sm my-1 dark:text-gray-200">{body}</p>
    </a>
    <small class="text-gray-500 dark:text-slate-400 mt-1">
        <span class="uppercase">{type}</span>
        â€” {date}
    </small>
</article>
