---
import { getCollection } from 'astro:content';
import LayoutPost from '../layouts/LayoutPost.astro';

export async function getStaticPaths() {
    const entries = [
        ...await getCollection('posts', ({data}) => !data.draft),
        ...await getCollection('projects', ({data}) => !data.draft),
        ...await getCollection('links', ({data}) => !data.draft),
    ]

    return entries
        .map(entry => ({
            params: { slug: entry.slug },
            props: { entry },
        }));
}

const { entry } = Astro.props;

const { Content } = await entry.render()
---

<LayoutPost
    type={entry.data.type}
    title={entry.data.title}
    description={entry.data.excerpt}
    publishedAt={entry.data.publishedAt}
    path={`/${entry.slug}`}
    nofollow={entry.data.nofollow}
    noindex={entry.data.noindex}
>
    <Content />
</LayoutPost>

<script>
    document.querySelectorAll('.astro-code').forEach((p) => {
        p.classList.add(
            'font-bold',
            'bg-slate-900',
            'overflow-x-auto',
            'p-4',
            'my-4',
            'rounded-xl'
        );
    });

    document.querySelectorAll('p > code').forEach((c) => {
        c.classList.add(
            'bg-[#efefef]',
            'p-1',
            'mx-1',
            'text-sm',
            'rounded-sm',
            'text-indigo-600',
            'font-semibold',
            'shadow',
            'shadow-[#cdcdcd]'
        );
    });

    document.querySelectorAll('.astro-code').forEach((c) => {
        c.classList.add('scrollbar-hide');
    })
</script>
